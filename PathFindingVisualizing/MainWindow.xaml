<Window x:Class="PathFindingVisualizing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFindingVisualizing"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Caminho dos Cavaleiros" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Margin="14 9" BorderBrush="Black" BorderThickness="2">
            <UniformGrid x:Name="MapView"  Rows="42" Columns="42" UseLayoutRounding="True" />
        </Border>

        <StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
            <TextBlock Text="Info do Caminho" FontSize="40" FontWeight="Bold" Margin="0 0 0 10" TextAlignment="Center"/>
            <Button Content="Iniciar" FontSize="28" Width="100" Margin="20" VerticalAlignment="Bottom" Click="StartClick"/>
            <StackPanel Orientation="Horizontal">
                <Label FontSize="28" FontWeight="DemiBold">Tempo de Batalha:</Label>
                <TextBlock Name="battleTimeTxt" FontSize="28" VerticalAlignment="Center" Margin="3">0</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
