<Window x:Class="PathFindingVisualizing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFindingVisualizing"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Caminho dos Cavaleiros" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Margin="14 9" BorderBrush="Black" BorderThickness="2">
            <UniformGrid x:Name="MapView"  Rows="42" Columns="42" UseLayoutRounding="True" />
        </Border>

        <StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
            <TextBlock Text="Info do Caminho" FontSize="40" FontWeight="Bold" Margin="0 0 0 10" TextAlignment="Center"/>
            <Button Content="Iniciar" FontSize="28" Width="100" Margin="20" VerticalAlignment="Bottom" Click="StartClick"/>
            <StackPanel Orientation="Horizontal" Margin="10 0">
                <Label FontSize="28" FontWeight="DemiBold">Tempo de Batalha:</Label>
                <TextBlock Name="battleTimeTxt" FontSize="28" VerticalAlignment="Center" Margin="3">0</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10 0">
                <Label FontSize="28" FontWeight="DemiBold">Melhor Caminho:</Label>
                <TextBlock Name="bestTimeTxt" FontSize="28" VerticalAlignment="Center" Margin="3">0</TextBlock>
            </StackPanel>
            <StackPanel Name="resultsPanel" Orientation="Vertical" Visibility="Hidden">
                <Line Stretch="Fill" Stroke="Black" X2="1" Margin="5 20"/>
                <TextBlock Text="Resultados" FontSize="32" FontWeight="Bold" Margin="0 0 0 10" TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Margin="10 " HorizontalAlignment="Center">
                    <Label FontSize="28" FontWeight="DemiBold">Tempo:</Label>
                    <TextBlock Name="currentTimeTxt" FontSize="28" VerticalAlignment="Center" Margin="3">0</TextBlock>
                </StackPanel>
                <Button Name="nextStepBtn" Content="Próx. Passo" FontSize="28" Width="150" Margin="5" VerticalAlignment="Bottom" Click="NextStepClick"/>
                <Button Name="viewPathBtn" Content="Ver Completo" FontSize="28" Width="200" Margin="10" VerticalAlignment="Bottom" Click="ViewPathClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
